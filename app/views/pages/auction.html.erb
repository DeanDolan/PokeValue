<%# References for this page:
    - Rails Guides – Layouts and rendering basics (ERB, partials, etc.)
    - Bootstrap 5 docs – grid, spacing, buttons, tables
    - W3Schools / MDN – HTML table layout, flexbox, basic form markup
%>

<div class="container py-3">
  <style>
    /* main header block at the top of the page */
    .au-page-header{
      margin:12px 0 16px;
      display:flex;
      align-items:center;
      justify-content:space-between;
      gap:12px;
    }
    .au-page-title{margin:0;font-size:1.4rem;line-height:1.1;}
    .au-subtitle{margin:2px 0 0;font-size:.85rem;color:#6b7280;}

    /* card that wraps all the filters */
    .au-filters-card{
      background:#ffffff;
      border-radius:1rem;
      border:1px solid #d4d4d8;
      padding:16px;
      box-shadow:0 10px 25px rgba(15,23,42,0.08);
      margin-bottom:18px;
    }

    .au-field-label{
      font-size:.75rem;
      color:#4b5563;
      margin-bottom:3px;
    }

    /* outer card for the table area */
    .au-table-card{
      position:relative;
      background:#ffffff;
      border-radius:1rem;
      border:1px solid #d4d4d8;
      box-shadow:0 10px 25px rgba(15,23,42,0.08);
      overflow:hidden;
    }

    /* horizontal scroll for smaller screens, always keep the card height sane */
    .au-table-wrap{
      overflow-x:auto;
      min-height:220px;
    }

    /* base auction table styling */
    .au-table{
      width:100%;
      border-collapse:collapse;
      min-width:920px;
      font-size:.85rem;
    }

    .au-table thead th{
      background:#f9fafb;
      font-weight:600;
      text-align:center;
      font-size:.8rem;
      color:#374151;
      padding:10px 12px;
      border-bottom:1px solid #e5e7eb;
      white-space:nowrap;
    }

    .au-table tbody td{
      padding:10px 12px;
      border-bottom:1px solid #f1f5f9;
      font-size:.82rem;
      vertical-align:middle;
      text-align:center;
    }

    /* placeholder text when there are no rows yet */
    .au-empty-state{
      position:absolute;
      inset:0;
      display:flex;
      align-items:center;
      justify-content:center;
      pointer-events:none;
      padding:16px;
      color:#6b7280;
      font-size:.85rem;
    }
  </style>

  <!-- header row with page title + main action button -->
  <div class="au-page-header">
    <div>
      <h1 class="au-page-title">Auction</h1>
      <p class="au-subtitle mb-0">Bid on live auctions and watch upcoming auctions.</p>
    </div>
    <button type="button" class="btn btn-success">
      Host Auction
    </button>
  </div>

  <!-- filters section – design only for now, no functionality yet -->
  <section class="au-filters-card">
    <div class="row g-3 mb-2">
      <div class="col-12">
        <div class="mb-2">
          <label for="au-search" class="au-field-label">Search</label>
          <input id="au-search" type="search"
                 class="form-control"
                 placeholder="Search product name from auction listings..." />
        </div>
      </div>
    </div>

    <div class="row g-3">
      <div class="col-6 col-md-4 col-lg-2">
        <label for="au-status" class="au-field-label">Status</label>
        <select id="au-status" class="form-select">
          <option value="">Any</option>
          <option value="live">Live</option>
          <option value="upcoming">Upcoming</option>
          <option value="ended">Ended</option>
        </select>
      </div>

      <div class="col-6 col-md-4 col-lg-3">
        <label for="au-location" class="au-field-label">Location (Country)</label>
        <select id="au-location" class="form-select">
          <option value="">All Countries</option>
          <option value="IE">Ireland</option>
          <option value="GB">United Kingdom</option>
          <option value="FR">France</option>
          <option value="DE">Germany</option>
          <option value="ES">Spain</option>
          <option value="IT">Italy</option>
          <option value="US">United States</option>
          <option value="CA">Canada</option>
          <option value="AU">Australia</option>
          <!-- extend list later if needed -->
        </select>
      </div>

      <div class="col-6 col-md-4 col-lg-2">
        <label for="au-price-min" class="au-field-label">Price Min (€)</label>
        <input id="au-price-min" type="number" step="0.01" min="0"
               class="form-control" placeholder="0.00" />
      </div>

      <div class="col-6 col-md-4 col-lg-2">
        <label for="au-price-max" class="au-field-label">Price Max (€)</label>
        <input id="au-price-max" type="number" step="0.01" min="0"
               class="form-control" placeholder="0.00" />
      </div>

      <div class="col-6 col-md-4 col-lg-2">
        <label for="au-sort" class="au-field-label">Sort by</label>
        <select id="au-sort" class="form-select">
          <option value="ending-soon">Ending Soonest</option>
          <option value="newest">Newest</option>
          <option value="oldest">Oldest</option>
          <option value="price-asc">Price: Low → High</option>
          <option value="price-desc">Price: High → Low</option>
        </select>
      </div>

      <div class="col-6 col-md-4 col-lg-3">
        <label for="au-reserve" class="au-field-label">Reserve Status</label>
        <select id="au-reserve" class="form-select">
          <option value="">Any</option>
          <option value="reserve">Reserve</option>
          <option value="no-reserve">No Reserve</option>
        </select>
      </div>
    </div>

    <!-- small button row – just visual for now -->
    <div class="d-flex justify-content-end gap-2 mt-3 flex-wrap">
      <button type="button" class="btn btn-outline-secondary btn-sm">
        Clear
      </button>
      <button type="button" class="btn btn-primary btn-sm">
        Apply Filters
      </button>
    </div>
  </section>

  <!-- main auction table – static for now, will wire up to real data later -->
  <section class="au-table-card">
    <div class="au-table-wrap">
      <table class="au-table" aria-label="Auction Listings">
        <thead>
          <tr>
            <th>Auctioneer</th>
            <th>Product(s)</th>
            <th>Reserve Status</th>
            <th>Current Bid</th>
            <th>Bids</th>
            <th>Ends</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <!-- design only – rows will be populated later -->
        </tbody>
      </table>
    </div>
    <div class="au-empty-state">
      No auctions data yet.
    </div>
  </section>
</div>
