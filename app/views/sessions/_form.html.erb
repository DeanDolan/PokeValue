<%= form_with url: login_path, method: :post, local: true do %>
  <div class="mb-3">
    <label class="form-label">Username</label>
    <%= text_field_tag :username, params[:username], class: "form-control", required: true, autocomplete: "username" %>
  </div>
  <div class="mb-3">
    <label class="form-label">Password</label>
    <%= password_field_tag :password, nil, class: "form-control", required: true, autocomplete: "current-password" %>
  </div>
  <div class="d-grid">
    <%= submit_tag "Log in", class: "btn btn-primary" %>
  </div>
<% end %>
